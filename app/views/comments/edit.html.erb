<p> コメント編集 </p>
<%= form_for(@comment, url: blog_comment_path) do |f| %>
    <% if @comment.errors.any? %>
        <div id="error_explanation">
            <h2><%= @comment.errors.count %>件のエラーがあります。</h2>

            <ul>
                <% @comment.errors.full_messages.each do |msg| %>
                <li><%= msg%></li>
            <% end %>
            </ul>
        </div>
    <% end %>
    <p><%= @comment_id%></p>
    <%= f.label :content %>
    <%= f.text_field :content, class: 'form-control' %>
    <br>
    <%= f.submit '投稿', class:'btn btn-primary btn-block' %>
<% end %>

<%= link_to "ブログ一覧画面に戻る", blogs_path %>
