<div class="child row">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <%= profile_img(@user) %>
    <%= @user.name  %><br>
    <%= @user.email %><br>

    <div class="row">
      <div class="col-md-6 col-sm-2">
        <p>フォロー</p>
        <% @user.followed_users.each do |follow| %>
          <%= profile_img(follow) %>
          <%= follow.email %>
          <%= render 'follow_form', user: follow %><br>
          <br>
        <% end %>
      </div>
      <div class="col-md-6 col-sm-2">
        <p>フォロワー</p>
        <% @user.followers.each do |follower| %>
          <%= profile_img(follower) %>
          <%= follower.email %>
          <%= render 'follow_form', user: follower %><br>
        <% end %>
      </div>
    </div>
  </div>
</div>
