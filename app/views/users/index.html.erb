<div class="container">
  <h2>ユーザー</h2>
  <div class="row">
  <% @users.each do |user| %>

      <div class="container-child col-md-2 col-sm-4 col-xs-6 ">
        <%= link_to user_path(user) do %>
        <%= profile_img(user) %>
        <% end %>
        <%= user.email %>

        <% if user.id != current_user.id %>

          <div class="item">
            <%= render 'follow_form', user: user %>
            <%= link_to "メッセージ", conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post', class: "btn btn-success" %>
          </div>
        <% else %>
            <%= link_to "マイページ", edit_user_registration_path, class: "btn btn-success" %>
        <% end %>
      </div>

  <% end %>
  </div>
</div>
