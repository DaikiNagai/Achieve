<div class="container">
    <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">        

        
        <h3>お問い合わせフォーム</h3>
        
        <%= form_for(@contacts,url:confirm_contacts_path) do |f|%>
            <% if @contacts.errors.any? %>
                <div id="error_explanation_c">
                    <h2><%= @contacts.errors.count%>件のエラーがあります</h2>
                    <ul>
                    <% @contacts.errors.full_messages.each do |mes|%>
                        <li><%= mes%></li>
                    <% end %>
                    </ul>
                </div>
            <% end %>
            <%= f.label :name%>
            <%= f.text_field :name, class: 'form-control'%>
            <%= f.label :email%>
            <%= f.text_field :email, class: 'form-control' %>
            <%= f.label :content %>
            <%= f.text_field :content, class: 'form-control' %>
            <br>
        
            <%= f.submit "送信",class: 'btn btn-primary btn-block' %>
        
        <% end %>
    </div>
</div>